@model Musteri
@{
    ViewData["Title"] = "Edit";
}
<h1>Güncelleme Ekranı</h1>
<hr>
<div class="row">


<div class="col-8">
<form asp-controller="Musteri" asp-action="Edit" method="post">
    <input type="hidden" asp-for="MusteriId">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Soyad" class="form-label"></label>
        <input asp-for="Soyad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label"></label>
        <input asp-for="Telefon" class="form-control">
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
</div>
<div class="col-12">
    <h4>Müşteri Adına Yapılmış Siparişler</h4>
    <hr />
    
    @if (Model.Siparisler != null && Model.Siparisler.Any())
    {
        <div class="row">
            @foreach (var item in Model.Siparisler)
            {
                <div class="col-md-4 mb-3">
                    <div class="card border-primary shadow-sm">
                        <div class="card-header bg-primary text-white">
                            Sipariş ID: @item.SiparisId
                        </div>
                        <div class="card-body">
                            @if (item.Urun != null)
                            {
                                <h5 class="card-title">@item.Urun.Ad</h5>
                                <p class="card-text">
                                    <strong>Barkod:</strong> @item.Urun.UrunBarkod
                                </p>
                            }
                            else
                            {
                                <p class="text-danger">Ürün bilgisi bulunamadı.</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Bu müşteriye ait sipariş bulunmamaktadır.</p>
    }
</div>

</div> 
  
