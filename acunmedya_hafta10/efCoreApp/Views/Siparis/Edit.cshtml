@model Siparis
@{
    ViewData["Title"] = "Edit";
}
<h1>Güncelleme Ekranı</h1>
<hr>
<div class="row">


<div class="col-8">
<form asp-controller="Siparis" asp-action="Edit" method="post">
    <input type="hidden" asp-for="SiparisId">
    <div class="mb-3">
        <label asp-for="UrunId" class="form-label"></label>
        <input asp-for="UrunId" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="MusteriId" class="form-label"></label>
        <input asp-for="MusteriId" class="form-control">
    </div>
    
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
</div>