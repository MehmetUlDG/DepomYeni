@model IEnumerable<Urun>
<h2>Ürünler Listesi</h2>
<a asp-controller="Urun" asp-action="Create" class="btn btn-primary">Yeni Urun Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.UrunId)</th>
            <th>@Html.DisplayNameFor(m => m.Ad)</th>
            <th>@Html.DisplayNameFor(m => m.Fiyat)</th>
             <th>@Html.DisplayNameFor(m => m.StokMiktarı)</th>
            <th>@Html.DisplayNameFor(m => m.Açıklama)</th>

            <th style="width: 150px;">Ayarlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UrunId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Fiyat)</td>
                <td>@Html.DisplayFor(modelItem => item.StokMiktarı)</td>
                <td>@Html.DisplayFor(modelItem => item.Açıklama)</td>

                <td><a asp-controller="Urun" asp-action="Edit" asp-route-Id="@item.UrunId"
                        class=" btn btn-sm btn-warning">Düzenle</a>
                <td><a asp-controller="Urun" asp-action="Delete" asp-route-Id="@item.UrunId"
                        class=" btn btn-sm btn-danger">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>